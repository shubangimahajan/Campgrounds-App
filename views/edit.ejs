<% include partials/header %>

<h1>
	EDIT FORM
</h1>

<div class="container">
	<div class="row">
	 <h1 style="text-align:center"><strong>Edit <%= campgrounds.name %></strong></h1>
     <div style="width:30%; margin: 30px auto">
		 <form action="/campgrounds/<%= campgrounds._id %>?_method=PUT" method="POST">
		<div class="form-group">
			<input type="text" value="<%= campgrounds.name %>" name="name" class="form-control">
		</div>
		 <div class="form-group">
			 <input type="text" value="<%= campgrounds.image %>" class="form-control" name="image">
		</div>
		 <div class="form-group">
			 <input type="number" value="<%= campgrounds.price %>" class="form-control" name="price" min="0.01" step="0.01">
		</div>	 
		<div class="form-group">
			<input class="form-control" type="text" value="<%= campgrounds.description %>" name="desc">	
		 </div>	 
		<div class="form-group">
			<button type="submit" class="btn btn-lg btn-primary btn-block ">submit</button>
		</div> 
		 </form>
		 <a class="btn btn-default btn-sm" href="/campgrounds">go back to campgrounds</a>	
     </div>
	
	</div>	
</div>

<% include partials/footer %>