<% include partials/header %>

<div class="container">
	<div class="row">
	 <h1 style="text-align:center"><strong>Add another Camp to the List</strong></h1>
     <div style="width:30%; margin: 30px auto">
		 <form method="POST" action="/campgrounds">
		<div class="form-group">
			<input type="text" placeholder="new name" name="name" class="form-control">
		</div>
		 <div class="form-group">
			 <input type="text" placeholder="new image" class="form-control" name="image">
		</div>
		<div class="form-group">
			 <input type="number" placeholder="price" class="form-control" name="price" min="0.01" step="0.01">
		</div>
		<div class="form-group">
			<input class="form-control" type="text" placeholder="description" name="desc">	
		 </div>	 
		<div class="form-group">
			<button type="submit" class="btn btn-lg btn-primary btn-block ">submit</button>
		</div> 
		 </form>
		 <a class="btn btn-default btn-sm" href="/campgrounds">go back to campgrounds</a>	
     </div>
	
	</div>	
</div>


<% include partials/footer %>