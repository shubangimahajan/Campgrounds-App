<% include partials/header %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>
	     Welcome to the Campgrounds Page!
      </h1>
	  <p>
		View our hand picked campgrounds from all over india
	  </p>
      <P>
		<a class="btn btn-primary btn-large" href="/campgrounds/new">add new camp</a>
	  </P>
    </div>
  </header>
  <div class="row text-center" style="display:flex; flex-wrap: wrap;">
	  <% camps.forEach(function(camp){ %>
	  <div class="col-md-4 col-sm-6">
		  <div class="thumbnail">
			  <img src="<%=camp.image %>">
			  <div class="caption">
				  <%=camp.name %>
				  <p><a href="/campgrounds/<%=camp._id%>" class="btn btn-primary">More Info </a>
				  </p> 
			  </div>
		  </div>
 
	  
      </div>
      <% }) %>	
  </div>
</div>
	
	



<% include partials/footer %>